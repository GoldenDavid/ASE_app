{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "plugin:react/recommended",
    "airbnb",
    "plugin:prettier/recommended"
  ],
  "overrides": [],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["react", "prettier", "react-hooks"],
  "rules": {
    "prettier/prettier": [
      "warn",
      {
        "printWidth": 80,
        "tabWidth": 2,
        "trailingComma": "none",
        "semi": false,
        "useTabs": false,
        "singleQuote": false,
        "htmlWhitespaceSensitivity": "css",
        "quoteProps": "as-needed",
        "endOfLine": "lf",
        "arrowParens": "avoid",
        "jsxSingleQuote": false
      }
    ],
    "react/prop-types": "off",
    "indent": "error"
  }
}
